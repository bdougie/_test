---
title: This Developing Story
pageable: true
per_page: 10
---
<!-- Page Header -->
<!-- Set your background image for this header on the line below. -->
<!-- IMG source: http://upload.wikimedia.org/wikipedia/commons/1/1b/San_Francisco_DSC09797.JPG -->
<header class="intro-header" style="background-image: url('http://i.imgur.com/jl1XTIs.jpg')">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                <div class="site-heading">
                    <h1>This Developing Story</h1>
                    <hr class="small">
                    <span class="subheading">Developing stories about developers</span>
                </div>
            </div>
        </div>
    </div>
</header>
<!-- Main Content -->
<div class="container">
    <div class="row">
        <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
          <% page_articles.each_with_index do |article, i| %>
            <div class="post-preview">
              <% date =  article.date.year %>
              <% path = "/tds-#{article.title.split(" ").join("-").downcase}.html" %>
              <% follow_back_url = "http:/developing.link" + path %>
              <% podcast_url = "This Developing Story" %>
               <a href=<%= path %>>
                <h2 class="post-title">
                    <%= article.title %>
                </h2>
                <h3 class="post-subtitle">
                    <%= article.body %>
                </h3>
              </a>
              <p class="post-meta">Posted by <a href="http://twitter.com/bdougieyo" target="_blank">
                Brian Douglas</a> on <%= article.date.strftime('%B %e, %Y') %>
                <%= link_to "Reply on Twitter", "https://twitter.com/intent/tweet?text=#{podcast_url}:&nbsp;&via=bdougieyo&url=#{follow_back_url}", 
                  target: "_blank", class: "pull-right" %>
              </p>
            </div>
            <hr>
          <% end %>
            <!-- Pager -->
            <ul class="pager">
              <li class="next">
                <% if paginate && num_pages > 1 %>
                  <p>Page <%= page_number %> of <%= num_pages %></p>

                  <% if prev_page %>
                    <p><%= link_to 'Previous page', prev_page %></p>
                  <% end %>
                <% end %>
                  <% if paginate %>
                    <% if next_page %>
                      <p><%= link_to 'Older Posts', next_page %></p>
                    <% end %>
                  <% end %>

                  <%#<a href="#">Older Posts &rarr;</a>%>
              </li>
            </ul>
        </div>
    </div>
</div>

